@{
    ViewData["Title"] = "Home Page";
}

<style>
    .list-group {
        text-align: center;
    }

    .list-group-item {
        text-align: center;
    }

    .map-container {
        height: 600px;
    }

    #main-content
    {
        margin-bottom: 40px;
    }
</style>

<div class="container">
    <div class="row justify-content-center" id="main-content">
        <div class="col-md-8 text-center">
            <h1 class="display-4">Welcome to our Library</h1>
            <p>We are a community library dedicated to providing access to books, resources, and learning opportunities for all.</p>
            <p>Our collection includes a wide range of materials, including books, magazines, audiobooks, and more. We also offer online resources, including e-books and databases, that can be accessed from anywhere.</p>
            <p>Stop by our physical location or visit us online to see all that we have to offer!</p>
            <p>Our opening hours are:</p>
            <ul class="list-group">
                <li class="list-group-item">Monday-Friday: 9am-7pm</li>
                <li class="list-group-item">Saturday: 10am-5pm</li>
                <li class="list-group-item">Sunday: Closed</li>
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2562.9677989820315!2d19.93879141569243!3d50.0637535243301!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165d878f76d1d1%3A0xdfb24aa9da2f7cf5!2sWesterplatte%201%2C%2031-033%20Krak%C3%B3w!5e0!3m2!1sen!2spl!4v1645256432084!5m2!1sen!2spl" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
